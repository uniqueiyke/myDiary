extends layout

block content
    h1 Welcome myDiary
    if posts
        each post in posts
            .card
                h5.card-header #{post.title}
                .card-body
                    p.card-text #{post.body}
                    p.card-text(class=(post.visibility === 'private' ? "text-warning" : "text-success")) #{post.visibility}
                .card-footer
                    a.btn.btn-info.likes(href=(post.likes)) 
                        | Like 
                        span.badge.badge-light.likes-badge #{post.likesCount}
                    if !isAuthenticated
                        a.btn.btn-secondary.comments(href= '' disabled=true) 
                            | Comment
                            span.badge.badge-light #{post.comments.length}
                    else
                        a.btn.btn-secondary.comments(href= '') 
                            | Comment  
                            span.badge.badge-light 
    if !isAuthenticated
        a.btn.btn-primary(href= `/users/registration`) sign up
        a.btn.btn-primary(href= `/users/login`) login